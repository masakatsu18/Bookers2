
                 <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                         <h2>User info</h2>
                            <%= image_tag @user.get_profile_image(200,200) %>
                              <table class="table table-striped">
                                 <tbody>
                                   <tr></tr>
                                   <tr>
                    	              <th>name</th>
                    	              <th><%= @user.name %></th>
                                   </tr>
                                   <tr>
                                      <th>introduction</th>
                    	              <th><%= @user.introduction %></th>
                                   </tr>
                             </tbody>
                          </table>
                            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
                                <i class="fas fa-user-cog"></i>
                              <% end %>
                         <h2>New book</h2>
                           <%= form_with model: @book, local:true do |f| %>
                            <div>
                              <h4>Title</h4>
                                <%= f.text_field :title %>
                         
                                 <h4>Opinion</h4>
                            
                                 <%= f.text_area :body %>
                        	
                                 <%= f.submit 'Create Book',class:"btn btn-sm" %>
                              
                                <% end %>
                            </div>
                         </div>
                        
                             <div class="col-md-8 offset-md-1">
                             <h1>Users</h1>
                              <table class="table table-hover table-inverse">
                                <thead>
                                  <tr> 
                                   <th>image</th>
                                   <th>name</th>
                                   <th colspan="3"></th>
                                  </tr>
                                </thead>
                                 <tbody>
                                <% @users.each do |user| %>
                                    <tr>
                                        <td>
                                          <%= image_tag user.get_profile_image(200,200) %>
                                        </td>
                                        <td>
                                          <%= user.name %>
                                        </td>
                                        <td>
                                          <%= link_to "Show", user_path(user) %>
                                        </td>  
                                    </tr>
                                <% end %>
                               </tbody>
                             </table>
                         </div>
                   </div>
                 </div>
               
                  
                      